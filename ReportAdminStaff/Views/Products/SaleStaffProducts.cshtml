@model IEnumerable<ReportAdminStaff.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>List of Products</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RetailPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RetailPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    <a asp-action="SaleStaffDetails" asp-route-id="@item.ProductId" class="btn btn-primary" style="margin-right: 20px;">Details</a>
                    <a asp-action="OrderInfo" asp-route-id="@item.ProductId" class="btn btn-danger">Order</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-controller="User" asp-action="Index" class="btn btn-primary">Back to Login</a>
</div>
