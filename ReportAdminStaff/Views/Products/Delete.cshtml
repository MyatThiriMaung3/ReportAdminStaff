@model ReportAdminStaff.Models.Product

@{
    ViewData["Title"] = "Delete";
}


<h3>Are you sure you want to delete this product?</h3>
<br />
<div>
    <h4>@Model.ProductName</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductBarcode)
        </dt>
        <dd class="col-sm-10">
            <img src="@Url.Content(Model.ProductBarcode)" alt="Product Barcode" class="img-fluid" style="width: 200px; height: auto;"  />
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ImportPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ImportPrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RetailPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RetailPrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ProductId" />
        <input type="submit" value="Delete" class="btn btn-danger" style="margin-right: 20px;" />
        <a asp-action="Index" class="btn btn-primary">Back to List</a>
    </form>
</div>
