@model ReportAdminStaff.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h1>@Model.ProductName's Product Details</h1>
<br />

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductBarcode)
        </dt>
        <dd class="col-sm-10">
            <img src="@Url.Content(Model.ProductBarcode)" alt="Product Barcode" class="img-fluid" style="width: 200px; height: auto;" />
        </dd>
        <br>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RetailPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RetailPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
    </dl>
</div>
    <a asp-action="SaleStaffProducts" class="btn btn-primary">Back to List</a>
</div>
